<!-- This file defines a Google gadget, but inside, you'll find all the HTML
     you need to get started with the WAMI recorder. Copy and paste away. -->

<?xml version="1.0" encoding="UTF-8" ?>
<Module>
  <ModulePrefs title="Wami Recorder Example" />
  <Content type="html">
    <![CDATA[


<html>
<head>
  <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/swfobject/2.2/swfobject.js"></script>
  <script type="text/javascript">
    function setupRecorder() {
      var params = {
        allowScriptAccess: 'always',
        wmode: 'transparent'
      };
    
      var flashvars = {
        visible: true,
        stream: false
      };

      swfobject.embedSWF("Wami.swf", "recorder", 214, 137, '10.0.0', null, flashvars, params); 
    } 
  </script>
</head>


<body onload="setupRecorder()">
<div id="recorder"></div>
</body>
</html>
